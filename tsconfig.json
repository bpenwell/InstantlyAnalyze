{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,  // Set to false to allow emitting files
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",  // Ensure your compiled files are outputted here
    "sourceMap": true
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
