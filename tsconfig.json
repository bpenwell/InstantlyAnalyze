{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module":"ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,  // Set to false to allow emitting files
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",  // Ensure your compiled files are outputted here
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@bpenwell/instantlyanalyze-module": ["../InstantlyAnalyze-Module/src"],
      "@bpenwell/instantlyanalyze-components": ["../InstantlyAnalyze-Components/src"],
      "@bpenwell/instantlyanalyze-layouts": ["../InstantlyAnalyze-Layouts/src"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
