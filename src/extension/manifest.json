{
  "manifest_version": 3,
  "name": "Zillow Data Scraper",
  "version": "1.0",
  "description": "Scrape property data from Zillow based on selected map area.",
  "permissions": [
    "activeTab",
    "scripting",
    "cookies",
    "storage",
    "tabs",
    "webRequest",                // Add this permission
    "webRequestBlocking",         // If you need to block/modify requests
    "http://*/",
    "https://*/"
  ],
  "host_permissions": [
    "*://www.zillow.com/*",
    "*://localhost/*",
    "*://d1jfoupk9ttnf8.cloudfront.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.zillow.com/*"],
      "js": ["contentv2.js"]
    },
    {
      "matches": ["*://localhost/*", "*://d1jfoupk9ttnf8.cloudfront.net/*"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["results.html", "results.js"],
      "matches": ["<all_urls>"]
    }
  ]
}